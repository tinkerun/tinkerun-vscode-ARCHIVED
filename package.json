{
  "name": "tinkerun-vscode",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "main": "./extension/build/extension.js",
  "engines": {
    "vscode": "^1.55.0"
  },
  "activationEvents": [
    "onCommand:tinkerun.connections.quick",
    "onCustomEditor:tinkerun.tinker",
    "onView:tinkerunConnections"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "tinkerun.tinker",
        "displayName": "Tinker",
        "selector": [
          {
            "filenamePattern": "*.tinker"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "tinkerun.connections.quick",
        "title": "Quick Connection",
        "icon": "$(zap)"
      },
      {
        "command": "tinkerun.connections.connect",
        "title": "Connect"
      },
      {
        "command": "tinkerun.connections.disconnect",
        "title": "Disconnect"
      },
      {
        "command": "tinkerun.snippets.create",
        "title": "Create Snippet",
        "icon": "$(add)"
      },
      {
        "command": "tinkerun.snippets.open",
        "title": "Open Snippet"
      },
      {
        "command": "tinkerun.snippets.rename",
        "title": "Rename Snippet"
      },
      {
        "command": "tinkerun.snippets.delete",
        "title": "Delete Snippet"
      },
      {
        "command": "tinkerun.snippets.run",
        "title": "Run Snippet",
        "icon": "$(run)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "tinkerun.snippets.run",
          "when": "resourceScheme == snippet",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "tinkerun.snippets.create",
          "when": "view == tinkerunConnections && viewItem == connection",
          "group": "inline"
        },
        {
          "command": "tinkerun.snippets.rename",
          "when": "view == tinkerunConnections && viewItem == snippet"
        },
        {
          "command": "tinkerun.snippets.delete",
          "when": "view == tinkerunConnections && viewItem == snippet"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "tinkerunConnections",
          "name": "Connections"
        }
      ]
    }
  },
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "start:extension": "lerna run --scope extension start --stream --",
    "start:webview": "lerna run --scope webview start --stream --",
    "start": "lerna run start --parallel"
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  }
}
